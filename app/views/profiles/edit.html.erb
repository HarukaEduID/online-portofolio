<div class="row">
  <div class="col-md-12">
    <h2>Profile</h2>
    <hr>
    <%= form_for(@profile, method: :put, url: profiles_path) do |f| %>
      <% if @profile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

          <ul>
          <% @profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :full_name %>
        <%= f.text_field :full_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :about %>
        <%= f.text_area :about, class: 'form-control', rows: '5' %>
      </div>
      <div class="form-group">
        <%= f.label :skills %>
        <%= f.text_field :skills, class: 'form-control', placeholder: 'php, ruby, mysql' %>
      </div>
      <div class="form-group">
        <label for="image-url">Image URL</label>
        <input type="text" class="form-control" id="image-url">
      </div>
      
      <%= f.submit "Save" %>
    <% end %>
  </div>
</div>