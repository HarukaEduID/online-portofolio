<div class="row" id="profile">
  <div class="col-md-9">
    <h2><%= @profile.full_name %></h2>
    <p><%= @profile.about %></p>

    <dl>
      <dt>Skill</dt>
      <dd>
        <% @profile.skills.split(',').each do |skill| %>
        <span class="label label-default"><%= skill %></span>
        <% end %>
      </dd>
    </dl>
  </div>
  <div class="col-md-3">
    <img src="<%= @profile.image_url %>" class="img-responsive img-profile">
  </div>
</div>

<div class="row" id="my-experience">
  <div class="col-md-12">
    <h2>Experience</h2>
    <% @experiences.each do |experience| %>
    <dl>
      <dt>
        <h3><%= experience.title %></h3>
        <strong>20 Des 1988 - 31 Jan 1990</strong>
      </dt>
      <dd>
        <p><%= experience.description %></p>
      </dd>
    </dl>
    <% end %>
  </div>
</div>

<div class="row" id="my-portfolio">
  <div class="col-md-12">
    <h2>Portfolio</h2>
    <div class="row">
      <% @portfolios.each do |portfolio| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="http://placehold.it/350x150">
          <div class="caption">
            <h3><%= portfolio.title %></h3>
            <p><%= portfolio.description %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>